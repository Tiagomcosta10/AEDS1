}

2
#include <stdio.h>

int main(void) {
    int v[1000]; // Vetor para armazenar os números

    for (int i = 0; i < n; i++) {
        scanf("%d", &v[i]);
    }

    
    for (int i = 999 ; i >= 0; i--) {
        printf("%d ", v[i]);
    }

    printf("\n"); 
    return 0;
}
