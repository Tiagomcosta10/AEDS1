#include <stdio.h>
#include <stdlib.h>
#include <string.h>
int main (void){
    char*nome;
    nome= malloc(sizeof(char)*(10+1));
    nome[10]='\0';//fim da string
    scanf("%10s", nome);
    printf("seu nome é: %s\n", nome);
    return 0;
}
